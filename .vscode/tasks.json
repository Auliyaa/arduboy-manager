{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build (debug)",
			"command": "jom",
			"args": [
				"install"
			],
			"options": {
				"cwd": "${workspaceFolder}/build.debug"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "build (release)",
			"command": "jom",
			"args": [
				"install"
			],
			"options": {
				"cwd": "${workspaceFolder}/build.release"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build"
		},
		{
			"label": "tests",
			"command": "${workspaceFolder}/build.debug/libsuura/tests/suura-tests",
			"args": [],
			"options": {
				"cwd": "${workspaceFolder}/build.debug"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "test"
		}
	]
}
